@model MVC_Muzik_Magaza.Models.tbl_musteri
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Giriş Yap</h2>

@using (Html.BeginForm("Girisyap", "Uyelik", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.KulAdi, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.KulAdi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KulAdi, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", type = "password" } })
        @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
    </div>

    <span style="color:red">@ViewBag.hata</span>


    <div class="form-group">
        <input type="submit" value="Giriş Yap" class="btn btn-secondary" />
    </div>
}
