@using MVC_Muzik_Magaza.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tbl_urun>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün AD</th>
            <th>Marka</th>
            <th>Fiyat</th>
            <th>Ürün Stok</th>
            <th>Kategori</th>
            <th>Ürün Açıklama</th>
            <th>Ürün Görseli</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.UrunID</td>
                <td>@urn.Urunad</td>
                <td>@urn.Marka</td>
                <td>@urn.UrunFiyat</td>
                <td>@urn.UrunStok</td>
                <td>@urn.tbl_kategori.KategoriAd</td>
                <td>@urn.UrunAciklama</td>
                <td><img src="@urn.ImagePath" width="100" height="100" /></td>

                <td><a href="/Urun/Sil/@urn.UrunID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urun/urungetir/@urn.UrunID" class="btn btn-info">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/Urunekle" class="btn btn-info">YENİ ÜRÜN EKLE</a>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))